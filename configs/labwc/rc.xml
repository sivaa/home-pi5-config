<?xml version="1.0"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">
  <!-- Touch input configuration -->
  <touch deviceName="ILITEK ILITEK-TP" mapToOutput="HDMI-A-1" mouseEmulation="no"/>

  <!-- Keyboard shortcuts for kiosk control -->
  <keyboard>
    <keybind key="F11">
      <action name="ToggleFullscreen"/>
    </keybind>
  </keyboard>

  <!-- Window rules for kiosk mode -->
  <windowRules>
    <!-- Auto-fullscreen Epiphany browser windows -->
    <windowRule identifier="org.gnome.Epiphany*">
      <action name="ToggleFullscreen"/>
    </windowRule>
  </windowRules>
</openbox_config>
